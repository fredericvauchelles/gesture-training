        list := StandardListView { 

        }
        HorizontalBox {
            button_add_folder := Button {
                //shape: ThemeButtonShape.None;
                icon: Icons.folder;
                colorize-icon: true;
                width: 50px;
                height: 50px;
            }
            button_add_zip := Button {
                //shape: ThemeButtonShape.Right;
                icon: Icons.zip-file;
                colorize-icon: true;
                width: 50px;
                height: 50px;
            }
        }
    }
    
    VerticalBox {
        spacing: 0;

        HorizontalBox {
            spacing: 0;
            padding: 0;
    
