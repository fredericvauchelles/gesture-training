export component MainMenu inherits Rectangle {
    callback show-add-folder <=> form.show-add-folder;

    HorizontalBox {
        alignment: center;
        Rectangle {
            max-width: 500px;
            preferred-width: 500px;

            VerticalBox {
                alignment: center;
                Rectangle {
                    max-height: 500px;
    
                    VerticalBox {
                        form := MainMenuForm{}
                    }
                }
            }
        }
        
    }
}