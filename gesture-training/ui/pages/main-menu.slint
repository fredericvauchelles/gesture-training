                enabled <=> root.enabled;

                border-bottom-right: true;
                height: CustomPalette.preferred-field-height;
                selected-value: 30;
                datas: [
                    {value: 30, display: "30''"},
                    {value: 60, display: "1'"},
                    {value: 120, display: "2'"},
                    {value: 180, display: "3'"}, 
                    {value: 300, display: "5'"}, 
                    {value: 600, display: "10'"}, 
