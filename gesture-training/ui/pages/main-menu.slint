            RadioBox {
                enabled <=> root.enabled;

                border-top-right: true;
                height: CustomPalette.preferred-field-height;
                selected-value: 5;
                datas: [
                    {value: 5, display: "5"},
                    {value: 10, display: "10"},
                    {value: 15, display: "15"},
                    {value: 20, display: "20"},
